{
    "name": "your-vendor/slim-boilerplate",
    "description": "Slim Framework 4 boilerplate with Twig templating",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.4",
        "slim/slim": "^4.14",
        "slim/psr7": "^1.7",
        "slim/twig-view": "^3.4",
        "php-di/php-di": "^7.0",
        "vlucas/phpdotenv": "^5.6",
        "phpmailer/phpmailer": "^6.9"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.10"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "phpcs": "phpcs",
        "phpcbf": "phpcbf",
        "code-qa": "scripts/code-qa.sh"
    }
}
