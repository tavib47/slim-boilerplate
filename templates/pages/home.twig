{% extends 'layouts/base.twig' %}

{% block title %}Home{% endblock %}
{% block meta_description %}Welcome to Slim App - A modern PHP application built with Slim Framework{% endblock %}

{% block content %}
<section class="hero">
    <h1 class="display-4">Welcome to Slim App</h1>
    <p class="lead">A modern PHP boilerplate built with Slim Framework and Twig.</p>
</section>

<section class="features">
    <h2 class="text-center mb-4">Features</h2>
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Slim Framework 4</h5>
                    <p class="card-text text-muted">A micro framework that helps you write simple yet powerful web applications.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Twig Templating</h5>
                    <p class="card-text text-muted">Modern template engine with reusable components and layouts.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">GDPR Compliant</h5>
                    <p class="card-text text-muted">Built-in cookie consent banner for privacy compliance.</p>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
