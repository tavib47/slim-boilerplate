{% extends 'layouts/base.twig' %}

{% block title %}Contact{% endblock %}
{% block meta_description %}Luați legătura cu noi{% endblock %}

{% block content %}
<section class="page-content">
    <h1>Contactați-ne</h1>
    <p>Aveți întrebări? Ne-ar plăcea să auzim de la dumneavoastră.</p>

    <form action="{{ route_localized('contact', locale) }}" method="post" class="contact-form">
        <div class="form-group">
            <label for="name">{{ trans('common.name') }}</label>
            <input type="text" id="name" name="name" required>
        </div>

        <div class="form-group">
            <label for="email">{{ trans('common.email') }}</label>
            <input type="email" id="email" name="email" required>
        </div>

        <div class="form-group">
            <label for="message">{{ trans('common.message') }}</label>
            <textarea id="message" name="message" rows="5" required></textarea>
        </div>

        <button type="submit" class="btn btn-primary">{{ trans('common.send') }}</button>
    </form>
</section>
{% endblock %}
