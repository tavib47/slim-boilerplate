{% extends 'layouts/base.twig' %}

{% block title %}Contact{% endblock %}
{% block meta_description %}Contactez-nous{% endblock %}

{% block content %}
<section class="page-content">
    <h1>Contactez-nous</h1>
    <p class="lead">Vous avez des questions ? Nous serions ravis de vous entendre.</p>

    <form action="{{ route_localized('contact', locale) }}" method="post" class="mt-4" style="max-width: 600px;">
        <div class="mb-3">
            <label for="name" class="form-label">{{ trans('common.name') }}</label>
            <input type="text" class="form-control" id="name" name="name" required>
        </div>

        <div class="mb-3">
            <label for="email" class="form-label">{{ trans('common.email') }}</label>
            <input type="email" class="form-control" id="email" name="email" required>
        </div>

        <div class="mb-3">
            <label for="message" class="form-label">{{ trans('common.message') }}</label>
            <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
        </div>

        <button type="submit" class="btn btn-primary">{{ trans('common.send') }}</button>
    </form>
</section>
{% endblock %}
